role_url           "https://<%= @node[:chef][:server_fqdn] %>"

validation_token   "<%= @node[:chef][:server_token] %>"

cookbook_path      [ "<%= @node[:chef][:path] %>/site-cookbooks", "<%= @node[:chef][:path] %>/cookbooks" ]

file_store_path    "<%= @node[:chef][:path] %>/file_store"
